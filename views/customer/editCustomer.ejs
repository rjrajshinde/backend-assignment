<h3 class="form-heading text-center">Edit the Customer</h3>

<form class="form-group" action="/customer/editCustomer" method="POST">
    <div class="row">
        <input type="text" class="form-control" id="name" name="name" value="<%-customer.name%>" required>
        <input type="hidden" id="_id" name="_id" value="<%-customer._id%>">
    </div>
    <div class="row">
        <input type="text" class="form-control" id="address" name="address" value="<%-customer.address%>" required>

    </div>
    <div class="row">
        <input type="email" class="form-control col" id="email" name="email" value="<%-customer.email%>" required>
        <input type="text" class="form-control col" id="contact" name="contact" value="<%-customer.contact%>"
            maxlength="10" minlength="10" required>
    </div>
    <div class="row">
        <input type="submit" class="btn btn-primary col" value="Submit">
        <!-- <input type="button" class="btn btn-danger col" value="Cancel" href="/customer"> -->
        <a href="/customer" class="btn btn-danger col">Cancel</a>
    </div>
</form>