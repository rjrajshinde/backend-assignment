<h3 class="form-heading text-center">Add the Invoice</h3>
<form class="form-group" action="/invoice/editInvoice" method="POST">
    <div class="row">
        <input type="hidden" id="_id" name="_id" value="<%-invoice._id%>">
        <input type="text" class="form-control col" id="item" name="item" placeholder="Enter items purchased"
            value="<%= invoice.item %>">
        <label for="duedate">Select Due Date</label>
        <input type="date" class="form-control col" id="duedate" name="duedate" placeholder="Add the Due Date"
            value="<%= invoice.duedate %>">
    </div>
    <div class="row">
        <input type="text" class="form-control col" id="notes" name="notes" placeholder="Add the Extra Notes"
            value="<%= invoice.notes %>">
    </div>
    <div class="row">
        <input type="text" class="form-control col" id="amount" name="amount" placeholder="Enter Total Amount ₹0.00"
            value="<%= invoice.amount %>">
        <input type="text" class="form-control col" id="paid" name="paid" placeholder="Enter paid Amount ₹0.00"
            value="<%= invoice.paid %>">
    </div>
    <div class="row">
        <label for="status">Select Status</label>
        <select class="form-control col" name="status" data-live-search="true" id="status">
            <option value="Paid">Paid</option>
            <option value="Late">Late</option>
            <option value="OutStanding">OutStanding</option>
        </select>
        <label for="invoice_customer">Select Client</label>
        <select class="form-control col" data-live-search="true" name="invoice_customer" id="invoice_customer">
            <% customer.forEach(client=> {%>
                <option label="<%= client.name %>" value="<%= client.id %>"></option>
                <% }) %>
        </select>
    </div>
    <div class="row">
        <input type="submit" class="btn btn-primary col" value="Submit">
        <a href="/invoice" class="btn btn-danger col">Cancel</a>
    </div>
</form>