<h3><a class="btn btn-secondary float-right" href="/invoice">Back to All Invoices</a></h3>
<title>Paid Invoices List</title>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>Item(s)</th>
            <th>Date</th>
            <th>Total Amount</th>
            <th>Amount Owed</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach((invoice)=> { %>
            <% if(invoice.status==='Late' ) {%>
                <tr>
                    <td>
                        <%- invoice.item %>
                    </td>
                    <td>
                        <%- invoice.duedate %>
                    </td>
                    <td>
                        <%- invoice.amount %>
                    </td>
                    <td>
                        <%- invoice.paid %>
                    </td>
                    <td>
                        <%- invoice.name %>
                    </td>
                    <td>
                        <%- invoice.status %>
                    </td>
                    <td>
                        <a href="/invoice/editInvoice/<%- invoice._id%>" class="btn btn-warning table-btn">Edit</a>
                        <a href="/invoice/deleteInvoice/<%- invoice._id%>" class="btn btn-danger table-btn">Delete</a>
                    </td>
                    <% } %>
                </tr>
                <% }) %>
    </tbody>
</table>